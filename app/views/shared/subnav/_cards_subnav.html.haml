#subNav
  .tabs
    %ul#toggle_tabs_unused.toggle_tabs
      %li= link_to t('cards.send'), cards_path, :class => "tab #{sub_tab_selected?(@current_sub_tab, 'Send a Card')}" 
      - if current_user
        %li= link_to t('cards.received'), my_received_cards_path, :class => "tab #{sub_tab_selected?(@current_sub_tab, 'Cards Received')}" 
        %li= link_to t('cards.sent'), my_sent_cards_path, :class => "tab #{sub_tab_selected?(@current_sub_tab, 'Cards Sent')}" 
