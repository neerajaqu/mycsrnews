<h1>Listing locales</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Name</th>
  </tr>

<% for locale in @locales %>
  <tr>
    <td><%=h locale.code %></td>
    <td><%=h locale.name %></td>
    <td><%= link_to 'Show', [:admin, locale] %></td>
    <td><%= link_to 'Edit', edit_admin_locale_path(locale) %></td>
    <td><%= link_to 'Destroy', [:admin, locale], :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Translations', admin_locale_translations_path(locale) %></td>
    <td><%= link_to 'Pages', admin_locale_translations_path(locale, :type => 'static_pages') %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New locale', new_admin_locale_path %>