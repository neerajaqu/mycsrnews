<h1>New locale</h1>

<% form_for [:admin, @locale] do |f| %>
  <%= f.error_messages %>

  <p>
    <%= label_tag :code %><br />
    <%= text_field_tag "locale_form[code]" %>
  </p>
  <p>
    <%= label_tag :name %><br />
    <%= text_field_tag "locale_form[name]" %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', admin_locales_path %>